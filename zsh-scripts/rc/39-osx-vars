
if [[ "$OSX" == "1" ]]
then
    if [[ $GNU_COREUTILS_DIR != '' ]]
    then
        prepend_to_path $GNU_COREUTILS_DIR
    fi
    export CLICOLOR=1
    export LESSOPEN='| /opt/local/bin/lesspipe.sh %s'

    # Sublime Edit 2
    SUBL='/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl'
    if [[ -e "$SUBL" ]]
    then
        alias subl="'$SUBL'"
        alias nano="subl"
        export EDITOR="subl-wrapper"
    fi
    unset SUBL
fi
